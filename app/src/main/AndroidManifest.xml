<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mm90849491.sleepguard" >

    <uses-permission android:name="com.android.alarm.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".UI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.DiagnosisManager"
            android:label="@string/title_activity_diagnosis_manager"
            android:parentActivityName=".UI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.HelpDesk"
            android:label="@string/title_activity_help_desk"
            android:parentActivityName=".UI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.SettingsActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".UI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.AndroidExplorer"
            android:label="@string/title_activity_android_explorer" >
        </activity>
        <activity
            android:name=".UI.Scheduler"
            android:label="@string/title_activity_scheduler"
            android:parentActivityName=".UI.DiagnosisManager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.DiagnosisManager" />
        </activity>
    </application>

</manifest>
