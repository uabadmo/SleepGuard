<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:columnCount="2"
    android:rowCount="1"
    android:gravity="center_vertical|fill_horizontal"
    android:paddingBottom="1dp"
    android:background="@color/primary"
    android:id="@+id/schedule_item_layout">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/text_scheduling_date"
        android:id="@+id/txtSchedulingDate"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:typeface="monospace"
        android:layout_weight="2"
        android:gravity="center_vertical|fill_vertical"
        android:background="@color/app_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgStatus"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="right"
        android:background="@color/app_background"
        android:src="@android:drawable/ic_menu_info_details"
        android:tint="@android:color/holo_green_dark"
        android:layout_weight="8" />

</LinearLayout>